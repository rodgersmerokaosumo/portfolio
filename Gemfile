# frozen_string_literal: true
source "https://rubygems.org"

# --- Core engine -------------------------------------------------------------
# Pin below 4.4 because jekyll-remote-theme 0.4.x is not yet compatible with 4.4+
gem "jekyll", "~> 4.3.2"

# --- Theme & plugins ---------------------------------------------------------
gem "jekyll-remote-theme"            # pulls Minimal-Mistakes via `remote_theme:`
gem "jekyll-seo-tag", "~> 2.8"       # SEO metadata
gem "jekyll-feed"                    # /feed.xml for RSS/Atom
gem "jekyll-sitemap"                 # /sitemap.xml for search engines
